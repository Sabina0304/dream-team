        <!--<EditText-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

        <Button
            android:onClick="maleClicked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gender1" />

        <Button
            android:onClick="femaleClicked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gender2"/>

    </LinearLayout>


</RelativeLayout>
